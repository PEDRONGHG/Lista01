import java.util.Scanner;

public class Questao08 {
    public static void main() {
        Scanner scanner = new Scanner(System.in);
        System.out.print("Digite a idade em anos: ");
        int idadeEmAnos = scanner.nextInt();
        
        int idadeEmMeses = idadeEmAnos * 12;
        int idadeEmSemanas = idadeEmAnos * 52;
        int idadeEmDias = idadeEmAnos * 365;
        int idadeEmHoras = idadeEmDias * 24;
        int idadeEmMinutos = idadeEmHoras * 60;
        int idadeEmSegundos = idadeEmMinutos * 60;
        
        System.out.println("Idade em meses: " + idadeEmMeses);
        System.out.println("Idade em semanas: " + idadeEmSemanas);
        System.out.println("Idade em dias: " + idadeEmDias);
        System.out.println("Idade em horas: " + idadeEmHoras);
        System.out.println("Idade em minutos: " + idadeEmMinutos);
        System.out.println("Idade em segundos: " + idadeEmSegundos);
    }
}
